<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_standard_half"
    app:cardElevation="@dimen/padding_standard"
    app:cardCornerRadius="@dimen/padding_standard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivGoogleBookImage"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_default_book_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="Book Image"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvGoogleBookName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            tools:text="Book Name"
            app:layout_constraintStart_toEndOf="@id/ivGoogleBookImage"
            app:layout_constraintTop_toTopOf="@id/ivGoogleBookImage"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvGoogleBookAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            tools:text="Author Name"
            app:layout_constraintStart_toStartOf="@id/tvGoogleBookName"
            app:layout_constraintTop_toBottomOf="@id/tvGoogleBookName"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvGoogleBookLanguage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            tools:text="Language"
            app:layout_constraintStart_toStartOf="@id/tvGoogleBookName"
            app:layout_constraintTop_toBottomOf="@id/tvGoogleBookAuthor"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvGoogleBookPageCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            tools:text="Page Count"
            app:layout_constraintStart_toStartOf="@id/tvGoogleBookName"
            app:layout_constraintTop_toBottomOf="@id/tvGoogleBookLanguage"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>